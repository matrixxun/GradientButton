<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FelinPowerfulButton">
        <attr name="fpb_button_type" format="enum">
            <enum name="raised" value="0" />
            <enum name="flat_color" value="1" />
            <enum name="flat_borderless" value="2" />
        </attr>

        <attr name="fpb_shape_type" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="round_rect" value="1" />
        </attr>

        <attr name="fpb_orientation" format="enum">
            <enum name="top_bottom" value="0" />
            <enum name="tr_bl" value="1" />
            <enum name="right_left" value="2" />
            <enum name="br_tl" value="3" />
            <enum name="bottom_top" value="4" />
            <enum name="bl_tr" value="5" />
            <enum name="left_right" value="6" />
            <enum name="tl_br" value="7" />
        </attr>

        <attr name="fpb_gradient" format="reference" />
        <attr name="fpb_start_color" format="color" />
        <attr name="fpb_end_color" format="color" />
        <attr name="fpb_stroke" format="dimension" />
        <attr name="fpb_stroke_color" format="color" />
        <attr name="fpb_corner_radius" format="dimension" />
        <attr name="fpb_filled" format="boolean" />
        <attr name="fpb_fill_color" format="color" />
        <attr name="fpb_normal_text_color" format="color" />
        <attr name="fpb_unable_text_color" format="color" />
        <attr name="fpb_unable_background_color" format="color" />

    </declare-styleable>
</resources>